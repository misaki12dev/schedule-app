<%= render "shared/header" %>


<h2>スケジュール新規作成</h2>
<%= render "shared/error", obj: @schedule %>　

<%= form_with model: @schedule do |f|%>
<table>
    <tr>
        <th><%= f.label :title, "タイトル"%></th>
        <td><%= f.text_field :title %></td>
    </tr>
    <tr>
        <th><%= f.label :start_date, "開始日"%></th>
        <td><%= f.date_field :start_date %></td>
    </tr>
    <tr>
        <th><%= f.label :end_date, "終了日"%></th>
        <td><%= f.date_field :end_date %></td>
    </tr>
    <tr>
        <th><%= f.label :all_day, "終日" %></th>
        <td><%= f.check_box :all_day %><br>
            <%= f.label :all_day, "終日の場合はチェックを入れます" %></td>
    </tr>
    <tr>
        <th><%= f.label :memo, "メモ" %></th>
        <td><%= f.text_field :memo %></td>
    </tr>
</table>

<div>
    <ul class="input_box">
        <li><%= f.submit"登録完了する"%></li>
        <li><%= link_to"ユーザー情報一覧に戻る", :schedules%></li>
    </ul>
</div>

<%end%>

<%= render "shared/footer" %>